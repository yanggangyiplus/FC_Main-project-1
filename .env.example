# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Studio 설정
LM_STUDIO_ENABLED=true
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL_NAME=qwen2.5-coder-14b-instruct

# 이미지 생성 API (선택 - 하나만 사용)
# 옵션 1: DALL-E 3 (유료, 품질 최고)
OPENAI_IMAGE_API_KEY=your_openai_api_key_here

# 옵션 2: Hugging Face (무료, 월 1,000회) - 추천!
HUGGINGFACE_TOKEN=hf_your_token_here

# Z-Image-Turbo 모델 사용
IMAGE_MODEL=z-image-turbo
HUGGINGFACE_MODEL=Tongyi-MAI/Z-Image-Turbo

# 메모리가 부족한 경우 CPU 오프로딩 활성화 (선택)
Z_IMAGE_CPU_OFFLOAD=true

# 이미지 저장소 (선택 - 하나만 사용)
# 옵션 1: Cloudinary (무료 25GB) - 추천!
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# 옵션 2: 구글 드라이브 API (무료 15GB)
GOOGLE_DRIVE_CREDENTIALS_PATH=./config/google_credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# 네이버 블로그 계정
NAVER_ID=your_naver_id
NAVER_PASSWORD=your_naver_password
NAVER_BLOG_URL=your_blog_url

# Slack 알림
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CHANNEL_ID=your_channel_id

# ChromaDB 설정
CHROMA_DB_PATH=./data/chroma_db

# 스크래핑 설정
HEADLESS_MODE=true
SCRAPING_DELAY=2

# 품질 평가 기준점
QUALITY_THRESHOLD=60

# 재시도 설정
MAX_RETRIES=3
